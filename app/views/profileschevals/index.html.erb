<div class="container">

  <h1 class="text-center title-show">Tous mes Chevals :</h1>
  <div class="row">
    <% @chevals.each do |cheval| %>
      <%= link_to cheval_path(cheval) do %>
        <div class="col-xs-12 col-md-4">
          <div class="card-cheval">
            <%= cl_image_tag cheval.photo, height: 400, width: 440, crop: :fill, class:"img-responsive" %>
            <div class="card-info label bottom-left">
              <h2><%= cheval.name %> <span class="grey-label"> à <%= cheval.ville %></span></h2>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    

        <div class="col-xs-12 col-md-4">
<div class="card-cheval">
        <%= link_to new_cheval_path do %>
          <%= cl_image_tag "new-cheval.jpg" , height: 400, width: 440, crop: :fill, class:"img-responsive" %>
          <div class="card-info label bottom-left">
            <h2><span class="grey-label" style="color: #434343">Une Pouliche est née</span></h2>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

