<h1 class="text-center">Un seul Cheval</h1>

<div class="container">
    <ul>
      <h2><%= @cheval.name %></h2>
      <li> <%= @cheval.description %>
      </br>
       <b>De couleur <%= @cheval.robe.name %>, il habite à <%= @cheval.address %></li></b>
       <p>La taille :</p>
       <p><%= @cheval.taille.to_s.chars.first %>,<%= @cheval.taille.to_s.chars[-2..-1].join %>mètres au garot </p>
       <%= link_to 'edit', edit_cheval_path(@cheval) %> -  <%= link_to 'Retour a tous les chevals', chevals_path %>
    </ul>
</div>

